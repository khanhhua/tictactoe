{
  "rules": {
    "players": {
      "$player_id": {
        ".write": "$player_id === auth.uid",
        ".read": "$player_id === auth.uid",
        "requests": {
          ".write": "auth != null"
        }
      }
    },
    "gameList": {
      ".read": "true",
      "$game_id": {
        ".write": "auth.uid === $game_id"
      }
    },
    "games": {
      "$game_id": {
        ".read": "true",
        ".write": "auth.uid === $game_id",
        "cells": {
          ".write": "auth.uid === data.parent().child('player2').val()"
        },
        "activePlayer": {
          ".write": "auth.uid === data.parent().child('player2').val()"
        },
        "player2": {
          ".write": "auth.uid === data.parent().child('player2').val()"
        }
      }
    }
  }
}
